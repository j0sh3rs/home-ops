<!-- Kubernetes container log format decoder -->
<!-- Matches full Kubernetes container log format: timestamp stdout|stderr F|P [actual message] -->
<!-- Pre-decoding extracts timestamp, but decoder still sees full log -->
<decoder name="kubernetes-container">
  <prematch>^\d\d\d\d-\d\d-\d\dT\d\d:\d\d:\d\d\.\d+Z </prematch>
</decoder>

<decoder name="kubernetes-container-extract">
  <parent>kubernetes-container</parent>
  <regex>^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\.[0-9]+Z [a-z]+ [FP] (.*)</regex>
  <order>log</order>
</decoder>
